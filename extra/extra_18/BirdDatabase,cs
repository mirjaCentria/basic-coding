using System;
using System.Collections.Generic;

namespace extra_18
{


    public class BirdDatabase
    {
        List<Bird> birds;
        List<Observation> observations;

        public BirdDatabase()
        {
            this.birds = new List<Bird>();
            this.observations = new List<Obversation>();
        }       

        public void Add(Observation o)
        {
            bool exists = false;
            Bird b = o.bird;

            foreach(Bird b in this.birds)
            {
                if(b.ToString == b.ToString )
                {
                    b.AddObservation();
                    exists = true;
                    break;
                } 

            }

            if(!exists)
            {
                birds.Add(b);
                exists = false;
            }
        }

        public void All()
        {
            foreach (Bird b in this.birds)
            {
                System.Console.Writeline(b.ToString());
            }
        }

        public void One(string name)
        {
            foreach (Bird b in this.birds)
            {
                if(b.GetName() == name)
                {
                    System.Console.Writeline(b.ToString());
                    break;
                }
                    
            }
        }
    }
}